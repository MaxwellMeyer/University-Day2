@{
  Layout = "_Layout";
}

@model University.Models.Student

<h4>Add a new Student Profile:</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class = "text", type = "name", required = "required" })

  @Html.Label("Select course")
  @Html.DropDownList("CourseId")

  @* @Html.Label("Select department")
  @Html.DropDownList("DeptId")*@

  @Html.LabelFor(model => model.EnrollmentDate)
  @Html.TextBoxFor(model => model.EnrollmentDate, new{@class = "datepicker form-control input-datepicker",
placeholder = "dd/mm/yyyy", data_date_format = "dd/mm/yyyy", @type = "date"})



  <input type="submit" id="bleep" value="Add new student" class="btn btn-default" />
}
<p id="bloop">@Html.ActionLink("Show all students", "Index")</p>


