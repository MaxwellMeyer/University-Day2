@{
  Layout = "_Layout";
}

@model University.Models.Course

<h2>Course Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.CourseTitle): @Html.DisplayFor(model => model.CourseTitle)</h3>
<h3>@Html.DisplayNameFor(model => model.CourseNum): @Html.DisplayFor(model => model.CourseNum)</h3>

@if (@Model.JoinEntities.Count == 0)
{
  <p>This course does not contain any students</p>
}
else
{
  <h4>Students enrolled in this course:</h4>
  <ul>
  @foreach (var join in Model.JoinEntities)
    {
      <li>@join.Student.Name</li>
    }
  </ul>
}
<p>@Html.ActionLink("Add student to a Course", "AddStudent", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Back to courses", "Index")</p>
<p>@Html.ActionLink("Edit Course", "Edit", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Delete Course", "Delete", new { id = Model.CourseId })</p>