@{
  Layout = "_Layout";
}

@model University.Models.Dept


<h2>Department Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if (@Model.JoinEntity.Count == 0)
{
  <p>This department does not contain any students</p>
}
else
{
  <h4>Students enrolled in this department:</h4>
  <ul>
  @foreach (var join in Model.JoinEntity)
    {
      <li>@join.Student.Name</li>
    }
  </ul>
}
<p>@Html.ActionLink("Edit Department", "Edit", new { id = Model.DeptId })</p>
<p>@Html.ActionLink("Add student to Department", "AddStudent", new { id = Model.DeptId })</p>
<p>@Html.ActionLink("Delete Dept", "Delete", new { id = Model.DeptId })</p>
<p>@Html.ActionLink("Back to departments", "Index")</p>